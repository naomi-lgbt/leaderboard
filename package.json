{
  "name": "leaderboard",
  "version": "0.0.0",
  "description": "Prototyping a contributor leaderboard.",
  "scripts": {
    "build": "pnpm run build:api",
    "build:api": "cd api && npm run build",
    "lint": "pnpm run lint:api && pnpm run lint:client",
    "lint:api": "cd api && pnpm run lint",
    "lint:client": "cd client && pnpm run lint",
    "start": "pnpm run start:api && pnpm run start:client",
    "start:api": "cd api && pnpm run start",
    "start:client": "cd client && pnpm run dev",
    "test": "pnpm run test:api",
    "test:api": "cd api && pnpm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:naomi-lgbt/leaderboard.git"
  },
  "engines": {
    "node": "18.16.1",
    "pnpm": "8.6.5"
  },
  "keywords": [
    "typescript",
    "eslint",
    "nodejs",
    "prettier"
  ],
  "author": "Naomi Carrigan",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/naomi-lgbt/leaderboard/issues"
  },
  "homepage": "https://github.com/naomi-lgbt/leaderboard#readme",
  "devDependencies": {
    "@types/mocha": "10.0.1"
  }
}